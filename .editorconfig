root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{py,ps1,psm1,psd1,kt,java}]
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,json,css,scss,html,xml,yml,yaml,sh}]
indent_style = space
indent_size = 2

[*.{bat,cmd}]
end_of_line = crlf
